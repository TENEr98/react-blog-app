{
	"env": {
	  "browser": true,
	  "es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
	  "ecmaFeatures": {
		"jsx": true
	  },
	  "ecmaVersion": 12,
	  "sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
	  "indent": ["error", 2],
	  "linebreak-style": ["error", "unix", "windows"],
	  "quotes": ["error", "single"],
	  "semi": ["error", "never"],
	  "react/react-in-jsx-scope": "off",
	  "react/prop-types": 0,
	  "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
  }